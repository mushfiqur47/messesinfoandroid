<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/schedule_row"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingRight="7dip"
    >
	<TextView
        android:id="@+id/schedule_title"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
    	android:layout_marginLeft="7dip"
        android:paddingTop="2dip"
		android:textSize="16dip"
		android:textStyle="bold"
        />

	<TextView
        android:id="@+id/schedule_name"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/schedule_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dip"
		android:textStyle="bold"
		android:textSize="12dip"
        />

	<TextView
        android:id="@+id/schedule_label"
	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
		android:layout_below="@id/schedule_name"
        android:layout_marginLeft="7dip"
		android:textSize="12dip"
        />

    <View
        android:id="@+id/schedule_color"
        android:layout_width="8dip"
        android:background="#ffff0000"
        android:layout_height="fill_parent"
        android:layout_alignTop="@id/schedule_title"
        android:layout_alignBottom="@id/schedule_label"
        />

</RelativeLayout>
